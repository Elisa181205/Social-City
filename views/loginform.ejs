<html>
  <head>
  <title>Pagina Inicial</title>
  <link rel="stylesheet" type="text/css" href="estilo.css"/>
  <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@1,300&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/944abe3983.js" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Comfortaa:wght@300&family=Do+Hyeon&family=Staatliches&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Roboto&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Major+Mono+Display&display=swap" rel="stylesheet">
  </head>
  <body class="body_cinza">
    <div class="wallpaper2"><div class="wallpaper_rgba2"></div></div>
  <!--<div class="div_azul"></div>-->
  <div class="mover_login">
  <div class="base_form"></div>
  <div class="form_login">
    <form action="/login" method="POST">
    <div class="login_email">
      <input type="text" name="nome_usuario" placeholder="Nome de usuário">
      <i class="fas fa-envelope" aria-hidden="true"></i>
    </div>
    <div class="login_senha">
    <input type="password" name="senha" placeholder="Senha">
    <i class="fas fa-lock"></i></div>
    <div class="login_enviar"><input type="submit" value="Entrar"></div>
    <div class="divisor"></div>
    <div id="botao" class="criar_conta"><a href="#" id="botao">Criar conta</a></div>
    <!--<a href="#" id="botao" class="button">Click me</a>-->
  </form></div></div>


  <!-- Modal para cadastro -->
  <div class="bg-modal">
    <div class="modal-content">
      <div class="close">+</div>
      <div class="cadastre_se"><h1>Cadastre-se</h1><hr></div>
      <form action="/form" method="POST">
        <div class="cad_name"><input type="text" name="nome" placeholder="Nome" required><i class="fas fa-user-alt"></i></div>
        <div class="cad_sobrenome"><input type="text" name="sobrenome" placeholder="Sobrenome" required><i class="fas fa-user-alt"></i></div>
        <div class="cad_email"><input type="email" name="email" placeholder="Email" required><i class="fas fa-envelope"></i></div>
        <div class="cad_usuario"><input type="text" name="nome_usuario" placeholder="Nome de usuario" required><i class="fas fa-user-circle"></i></div>
        <div class="cad_genero">
          <i class="fas fa-genderless"></i>
          <select name="genero">
            <option value="">Gênero</option>
            <option value="Feminino">Feminino</option>
            <option value="Masculino">Masculino</option>
            <option value="Outro">Outro</option>
          </select>
        </div>
        <input type="hidden" name="cargo" value="1"/>
        <div class="cad_senha"><input type="password" name="senha" id="senha" placeholder="Senha" required><i class="fas fa-lock"></i></div>
        <!--<button type="button" onclick="mostrarSenha()">Mostra a senha meu bom</button>-->
        <div class="olho" onclick="mostrarSenha()"><i class="fas fa-eye"></i></div>
        <div class="semolho" onclick="fecharSenha()"><i class="fas fa-eye-slash"></i></div>
        <div class="cad_cadastrar"><input type="submit" value="Cadastrar"></div>
      </form>
      <div class="text_erro"><%= erro %></div>
    </div>
  </div>

  <!-- Javascript do modal -->
  <script>

  document.getElementById('botao').addEventListener('click',function(){
    document.querySelector('.bg-modal').style.display = 'flex';
  });

  document.querySelector('.close').addEventListener('click',function(){
    document.querySelector('.bg-modal').style.display = 'none';
  });

  document.querySelector('.semolho').style.display = 'none';

  function mostrarSenha(){
    var tipo = document.getElementById("senha");
    if(tipo.type = "password"){
      tipo.type = "text";
    }
    document.querySelector('.olho').style.display = 'none';
    document.querySelector('.semolho').style.display = 'flex';
  }
  function fecharSenha(){
    var tipo = document.getElementById("senha");
    if(tipo.type = "text"){
      tipo.type = "password";
      document.querySelector('.olho').style.display = 'flex';
      document.querySelector('.semolho').style.display = 'none';
    }
  }

  </script>

  </body>
</html>
